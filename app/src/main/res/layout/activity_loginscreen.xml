<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".loginscreen">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/back2"
        android:scaleType="fitXY"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:fontFamily="sans-serif"
        android:text="Explore endless knowledge with our intuitive app."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/emailloginscreen"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:background="@drawable/edittext"
        android:fontFamily="sans-serif"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/passwordloginscreen"
        android:layout_below="@+id/emailloginscreen"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext"
        android:fontFamily="sans-serif"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Signinbtnloginscreen"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_below="@id/passwordloginscreen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttons"
        android:fontFamily="sans-serif"
        android:text="Log in"
        android:textColor="@color/white"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Signinbtnloginscreen"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif"
        android:text="Don't have an account?"
        android:textColor="@color/black"
        android:textSize="20dp"


        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/signuploginscreenn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Signinbtnloginscreen"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif"
        android:text="sign up"
        android:textColor="@color/light_blue"
        android:textSize="20dp"


        />






</RelativeLayout>